---
# yamllint configuration for home lab infrastructure
# https://yamllint.readthedocs.io/en/stable/configuration.html

extends: default

# Custom rules for infrastructure code
rules:
  # Line length - relaxed for home lab readability
  line-length:
    max: 120
    level: warning
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: true

  # Indentation - 2 spaces standard
  indentation:
    spaces: 2
    indent-sequences: true
    check-multi-line-strings: false

  # Comments
  comments:
    min-spaces-from-content: 1
    require-starting-space: true
    ignore-shebangs: true

  # Comments indentation - disabled for flexibility
  comments-indentation: disable

  # Document start/end markers
  document-start:
    present: false  # Not required for all files
  document-end:
    present: false

  # Empty lines
  empty-lines:
    max: 2
    max-start: 0
    max-end: 1

  # Empty values - allow for templating
  empty-values:
    forbid-in-block-mappings: false
    forbid-in-flow-mappings: true

  # Brackets - spacing
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0

  # Braces - spacing
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0

  # Colons - spacing
  colons:
    max-spaces-before: 0
    max-spaces-after: 1

  # Commas - spacing
  commas:
    max-spaces-before: 0
    min-spaces-after: 1
    max-spaces-after: 1

  # Hyphens - spacing for lists
  hyphens:
    max-spaces-after: 1

  # Key duplicates - error
  key-duplicates:
    forbid-duplicated-merge-keys: true

  # Key ordering - disabled for flexibility
  key-ordering: disable

  # Octal values - error (avoid confusion)
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

  # Quoted strings
  quoted-strings:
    quote-type: any
    required: only-when-needed
    extra-required: []
    extra-allowed: []
    allow-quoted-quotes: false

  # Trailing spaces - error
  trailing-spaces: enable

  # Truthy values - relaxed for Ansible/K8s
  truthy:
    allowed-values:
      - 'true'
      - 'false'
      - 'yes'
      - 'no'
      - 'on'
      - 'off'
    check-keys: false

# Ignore patterns
ignore: |
  .git/
  .terraform/
  node_modules/
  venv/
  .venv/
  *.min.yaml
  *.min.yml
  vendor/
  .cache/
  
  # Generated files
  **/charts/**/templates/
  .helm/
  
  # Test fixtures
  **/fixtures/**
  **/testdata/**
  
  # CI/CD generated files
  .github/workflows/*.generated.yml
