---
# DNS Service (UDP/TCP port 53) - LoadBalancer with MetalLB
apiVersion: v1
kind: Service
metadata:
  name: pihole-dns
  namespace: {{ pihole_namespace }}
  labels:
    app: pihole
    service: dns
{% if pihole_service_annotations | length > 0 %}
  annotations:
{% for key, value in pihole_service_annotations.items() %}
    {{ key }}: "{{ value }}"
{% endfor %}
{% endif %}
spec:
  type: {{ pihole_service_type }}
{% if pihole_loadbalancer_ip %}
  loadBalancerIP: {{ pihole_loadbalancer_ip }}
{% endif %}
  selector:
    app: pihole
  ports:
  - name: dns-tcp
    port: 53
    targetPort: dns-tcp
    protocol: TCP
  - name: dns-udp
    port: 53
    targetPort: dns-udp
    protocol: UDP
  sessionAffinity: None
  externalTrafficPolicy: Local

---
# Web Interface Service (HTTP/HTTPS) - LoadBalancer with MetalLB
apiVersion: v1
kind: Service
metadata:
  name: pihole-web
  namespace: {{ pihole_namespace }}
  labels:
    app: pihole
    service: web
{% if pihole_service_annotations | length > 0 %}
  annotations:
{% for key, value in pihole_service_annotations.items() %}
    {{ key }}: "{{ value }}"
{% endfor %}
{% endif %}
spec:
  type: {{ pihole_service_type }}
{% if pihole_loadbalancer_ip %}
  loadBalancerIP: {{ pihole_loadbalancer_ip }}
{% endif %}
  selector:
    app: pihole
  ports:
  - name: http
    port: 80
    targetPort: http
    protocol: TCP
  - name: https
    port: 443
    targetPort: https
    protocol: TCP
  sessionAffinity: ClientIP
  sessionAffinityConfig:
    clientIP:
      timeoutSeconds: 10800
  externalTrafficPolicy: Local
