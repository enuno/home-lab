---
# BGP Monitoring Deployment
apiVersion: apps/v1
kind: Deployment
metadata:
  name: bgp-monitoring
  namespace: metallb-monitoring
  labels:
    app: bgp-monitoring
spec:
  replicas: 1
  selector:
    matchLabels:
      app: bgp-monitoring
  template:
    metadata:
      labels:
        app: bgp-monitoring
    spec:
      serviceAccountName: bgp-monitoring
      containers:
      - name: bgp-monitoring
        image: prom/node-exporter:latest
        ports:
        - containerPort: 9100
          name: metrics
        - containerPort: 8080
          name: http
        env:
        - name: CONFIG_FILE
          value: "/etc/config/monitoring.conf"
        volumeMounts:
        - name: config
          mountPath: /etc/config
        resources:
          requests:
            memory: "64Mi"
            cpu: "50m"
          limits:
            memory: "128Mi"
            cpu: "100m"
        livenessProbe:
          httpGet:
            path: /health
            port: 8080
          initialDelaySeconds: 30
          periodSeconds: 30
        readinessProbe:
          httpGet:
            path: /ready
            port: 8080
          initialDelaySeconds: 10
          periodSeconds: 10
      volumes:
      - name: config
        configMap:
          name: bgp-monitoring-config
      nodeSelector:
        kubernetes.io/arch: amd64
      tolerations:
      - key: node-role.kubernetes.io/control-plane
        operator: Exists
        effect: NoSchedule
---
# BGP Monitoring Service Account
apiVersion: v1
kind: ServiceAccount
metadata:
  name: bgp-monitoring
  namespace: metallb-monitoring
  labels:
    app: bgp-monitoring
---
# BGP Monitoring RBAC
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: bgp-monitoring
rules:
- apiGroups: ["metallb.io"]
  resources: ["bgppeers", "ipaddresspools", "bgpadvertisements"]
  verbs: ["get", "list", "watch"]
- apiGroups: [""]
  resources: ["nodes", "services", "endpoints"]
  verbs: ["get", "list", "watch"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: bgp-monitoring
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: bgp-monitoring
subjects:
- kind: ServiceAccount
  name: bgp-monitoring
  namespace: metallb-monitoring
