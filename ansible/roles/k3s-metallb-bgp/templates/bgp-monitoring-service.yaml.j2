---
# BGP Monitoring Service
apiVersion: v1
kind: Service
metadata:
  name: bgp-monitoring
  namespace: metallb-monitoring
  labels:
    app: bgp-monitoring
  annotations:
    prometheus.io/scrape: "true"
    prometheus.io/port: "9100"
    prometheus.io/path: "/metrics"
spec:
  type: ClusterIP
  ports:
  - name: metrics
    port: 9100
    targetPort: 9100
    protocol: TCP
  - name: http
    port: 8080
    targetPort: 8080
    protocol: TCP
  selector:
    app: bgp-monitoring
---
# BGP Monitoring ServiceMonitor for Prometheus Operator
apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  name: bgp-monitoring
  namespace: metallb-monitoring
  labels:
    app: bgp-monitoring
    prometheus: kube-prometheus
spec:
  selector:
    matchLabels:
      app: bgp-monitoring
  endpoints:
  - port: metrics
    interval: 30s
    path: /metrics
  - port: http
    interval: 30s
    path: /health
