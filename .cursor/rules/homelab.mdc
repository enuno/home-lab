# Check for required tools
check_prerequisites() {
    local missing_tools=()

    command_exists() {
        command -v "$1" >/dev/null 2>&1
    }

    # Required tools with minimum versions
    local -A required_tools=(
        ["gpg"]="2.2.0"
        ["ykman"]="4.0.0"
        ["ssh-keygen"]="8.2"
